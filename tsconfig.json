{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["esnext", "DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "types": ["vite/client", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
    },
    "skipLibCheck": true,
  },
  "include": ["src", "setupVitest.js"],
}
